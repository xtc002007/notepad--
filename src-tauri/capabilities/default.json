{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "main-capability",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "core:default",
        "sql:default",
        "sql:allow-load",
        "sql:allow-execute",
        "sql:allow-select",
        "fs:default",
        "fs:allow-mkdir",
        "fs:allow-read-file",
        "fs:allow-write-file",
        "fs:allow-exists",
        "fs:allow-remove",
        {
            "identifier": "fs:scope",
            "allow": [
                "$APPDATA/**"
            ]
        }
    ]
}